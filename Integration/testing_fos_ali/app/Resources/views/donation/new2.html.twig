{% block body %}

<main>
    <div class="main-section">
        <div class="container">
            <div class="main-section-data">


                <div class="wizard-container">
                    <div class="card wizard-card" data-color="red" id="wizard">
                        {{ form_start(form) }}
                            <!--        You can switch " data-color="blue" "  with one of the next bright colors: "green", "orange", "red", "purple"             -->

                            <div class="wizard-header">
                                <h3 class="wizard-title">
                                    Ajouter votre don
                                </h3>

                            </div>
                            <div class="wizard-navigation">
                                <ul>
                                    <li><a href="#details" data-toggle="tab">Informations</a></li>
                                    <li><a href="#captain" data-toggle="tab">Catégorie</a></li>
                                    <li><a href="#description" data-toggle="tab">Description</a></li>
                                </ul>
                            </div>

                            <div class="tab-content">
                                <div class="tab-pane" id="details">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <h4 class="info-text">
                                                Commençons par les détails de base.</h4>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="input-group">


                                                <div class="form-group label-floating">
                                                    {{ form_row(form.libDonation) }}


                                                </div>
                                                <div>
                                                    {{ form_row(form.file) }}


                                                </div>

                                            </div>

                                            <div class="input-group">

                                                <div class="form-group label-floating">


                                                </div>
                                            </div>

                                        </div>
                                        <div class="col-sm-6">
                                            <div class="input-group">
                                            <div class="form-group label-floating">
                                                {{ form_row(form.valeurD) }}
                                            </div>
                                                {# <div class="card">
                                               <form action="/" id="frmFileUpload" class="dropzone" method="post" enctype="multipart/form-data">
                                                    <div class="dz-message">
                                                        <div class="drag-icon-cph"> <i class="material-icons">touch_app</i> </div>
                                                        <h3>Drop files here or click to upload.</h3>
                                                         </div>
                                                    <div class="fallback">
                                                        <input name="file" type="file" multiple />
                                                    </div>
                                                </form>
                                                </div>#}

                                            </div></div>
                                    </div>
                                </div>
                                <div class="tab-pane" id="captain">
                                    <h4 class="info-text"> Choisissez une catégorie pour votre don  </h4>
                                    <div class="row">




                                        <div class="col-sm-10 col-sm-offset-1">
                                            <input type="hidden" id="kled" name="kled" value="musique"/>
                                            <div class="col-sm-4">
                                                <div id="musique" class="choice" data-toggle="wizard-radio" rel="tooltip" title="This is good if you travel alone.">
                                                   <input checked type="radio" id="musique" name="job" value="Design">
                                                    <div class="icon">
                                                        <i class="material-icons">weekend</i>
                                                    </div>
                                                    <h6>Musique</h6>
                                                </div>
                                            </div>
                                            <div class="col-sm-4">
                                                <div id="dessin" class="choice" data-toggle="wizard-radio" rel="tooltip" title="Select this room if you're traveling with your family.">
                                                    <input type="radio" id="dessin" name="job" value="Code">
                                                    <div class="icon">
                                                        <i class="material-icons">home</i>
                                                    </div>
                                                    <h6>Dessin</h6>
                                                </div>
                                            </div>
                                            <div class="col-sm-4">
                                                <div id="Developpement" class="choice" data-toggle="wizard-radio" rel="tooltip" title="Select this option if you are coming with your team.">
                                                    <input type="radio" id="dev" name="job" value="Code">
                                                    <div class="icon">
                                                        <i class="material-icons">business</i>
                                                    </div>
                                                    <h6>Developpement</h6>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane" id="description">
                                    <div class="row">
                                        <h4 class="info-text"> Envoyez-nous une description .</h4>
                                        <div class="col-sm-6 col-sm-offset-1">

                                        </div>
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                {{ form_row(form.description) }}

                                                <p class="description">"veuillez decrir le don ."</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="wizard-footer">
                                <div class="pull-right">

                                    <input type='button' class=' btn btn-next btn-fill btn-danger btn-wd ' name='next' value='Next' />




                                    {{ form_row(form.ajouter) }}

                                </div>
                                <div class="pull-left">
                                    <input type='button' class='btn btn-previous btn-fill btn-default btn-wd' name='previous' value='Previous' />
                                </div>
                                    <div class="footer-checkbox">
                                        <div class="col-sm-12">

                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                            </div>

                    </div>
                    {{ form_end(form) }}
                    {% if job %}
                    {{ job }}
{% endif %}
                </div> <!-- wizard container -->
                               </div></div></main>

    <script type="text/javascript" src="{{ asset('template/js/jquery.min.js')}}"></script>
