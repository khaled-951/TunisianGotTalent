{% extends "admin.html.twig" %}



{% block strong %} Sponsor ID{%  endblock %}

    {% block h2 %} -  {{ sponsor.idsp }} {% endblock %}

    {% block path %} {{ path('sponsor_index') }} {% endblock %}
{% block body %}

    <div class="row clearfix">
            <div class="col-lg-6 col-md-12">
                <div class="card">
                    <div class="tab-content">
                        <div class="tab-pane body active" id="about">

                                <a role="button" class="boxs-close float-lg-right" href="{{ path('sponsor_delete',{ 'idsp': sponsor.idsp})}}"> Delete Sponsor <i class="zmdi zmdi-close"></i></a>

                            <div class="col-lg-12 col-md-4 col-12">
                                <img class="  profile-image" src="{{ asset('uploads/images/' ~ sponsor.logo) }}" alt="user" width="600px" height="300px">
                                <h4 class="m-t-0 m-b-0 "><strong>Sponsor</strong> {{ sponsor.namesp }}</h4>
                                <hr>

                            </div>

                            <small class="text-muted">Email address: </small>
                            <p>{{ sponsor.email }}</p>
                            <hr>

                            <small class="text-muted">Phone Number: </small>
                            <p>+ 216 {{sponsor.tel}}</p>
                            <hr>
                            <small class="text-muted">Address: </small>
                            <p>{{sponsor.address}}</p>
                            <hr>
                            <small class="text-muted">Description:</small>
                            <p class="m-b-0">{{ sponsor.description }}</p>
                        </div>

                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-12">
                <div class="card">
                    <div class="header">
                        <h2><strong>Sponsor</strong> Pack <small>Advertisments List</small> </h2>
                        <ul class="header-dropdown">
                            <li class="dropdown"> <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <i class="zmdi zmdi-more"></i> </a>
                                <ul class="dropdown-menu dropdown-menu-right slideUp">
                                    <li><a href="{{ path('pack_index') }}">Pack List</a></li>

                                </ul>
                            </li>

                        </ul>
                    </div>
                    <div class="body table-responsive members_profiles">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th style="width:60px;">Pack ID</th>
                                <th>Position</th>
                                <th>Display Date</th>
                                <th>Discard Date</th>
                                <th>Price</th>
                                <th>Status</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for pack in packs %}

                                    <tr>
                                        <td>{{ pack.idad }}</td>
                                        <td><a href="javascript:void(0);">{{ pack.position  }}</a></td>
                                        <td>{{ pack.displaydate | date("d/m/Y") }}</td>
                                        <td>{{ pack.discarddate | date("d/m/Y")}}</td>
                                        <td>{{ pack.price }}</td>
                                        <td>{{ pack.status }}</td>
                                    </tr>

                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

{% endblock %}


