{% extends 'admin.html.twig' %}


{% block strong %}Pack {%  endblock %}

    {% block h2 %} Information{% endblock %}

    {% block path %} {{ path('pack_index') }} {% endblock %}

{% block body %}




    <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="card">
                        <div class="block-header">
                        </div>
                        <div class="body">

                            {{ form_start(form,{'attr': {'class': 'form-horizontal'}}) }}


                            <div class="row clearfix">
                                <div class="col-lg-2 col-md-2 col-sm-4 form-control-label">
                                    <label for="email_address_2">Advertisment</label>
                                </div>
                                <div class="col-lg-10 col-md-10 col-sm-8">
                                    <div class="form-group">
                                        {{ form_widget(form.ad,{'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-lg-2 col-md-2 col-sm-4 form-control-label">
                                    <label for="password_2">Position</label>
                                </div>
                                <div class="col-lg-10 col-md-10 col-sm-8">
                                    <div class="form-group">
                                        {{ form_widget(form.position,{'attr': {'class': 'form-control'}}) }}

                                    </div>


                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-lg-2 col-md-2 col-sm-4 form-control-label">
                                    <label for="email_address_2">Display Date</label>
                                </div>
                                <div class="col-lg-3 col-md-6">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="zmdi zmdi-calendar"></i> </span>
                                        {{ form_widget(form.displaydate,{'attr': {'class': 'form-control date','placeholder':'Ex: 2016-01-30'}}) }}

                                    </div>
                                </div>

                            </div>
                            <div class="row clearfix">
                                <div class="col-lg-2 col-md-2 col-sm-4 form-control-label">
                                    <label for="email_address_2">Discard Date</label>
                                </div>

                                <div class="col-lg-3 col-md-6">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="zmdi zmdi-calendar"></i> </span>
                                        {{ form_widget(form.discarddate,{'attr': {'class': 'form-control date','placeholder':'Ex: 2016-01-30'}}) }}

                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-lg-2 col-md-2 col-sm-4 form-control-label">
                                    <label for="password_2">Price</label>
                                </div>
                                <div class="col-lg-10 col-md-10 col-sm-8">
                                    <div class="form-group">
                                        {{ form_widget(form.price,{'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-lg-2 col-md-2 col-sm-4 form-control-label">
                                    <label for="password_2">Sponsor</label>
                                </div>
                                <div class="col-lg-10 col-md-10 col-sm-8">
                                    <div class="form-group">
                                        {{ form_widget(form.idsp,{'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">

                                <div class="col-sm-8 offset-sm-2">
                                    <input type="submit" class="btn btn-raised btn-primary btn-round waves-effect" value="Add">
                                </div>
                            </div>
                            {{ form_end(form) }}

                        </div>
                    </div>
                </div>
            </div>




{% endblock %}
