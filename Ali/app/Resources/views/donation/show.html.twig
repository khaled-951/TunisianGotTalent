{% extends 'base.html.twig' %}

{% block body %}

<main>
    <div class="main-section">
        <div class="container">
            <div class="main-section-data">
                <div class="row">
                    <div class="col-lg-3 col-md-4 pd-left-none no-pd">
                        <div class="main-left-sidebar no-margin"></div>
                    </div>
                    <div class="col-lg-6 col-md-8 no-pd" >

                        <div class="main-ws-sec">
                            <div class="posts-section">
                                <div class="post-bar">
                                    <div class="post_topbar">
                                        <div class="usy-dt">
                                            <img src="" alt="">
                                            <div class="usy-name">
                                                <h3>Donation: </h3>

                                            </div>
                                        </div>


    <table>
        <tbody>
        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap"
               cellspacing="0" width="100%">
            <tr>
                <th>Id</th>
                <td>{{ donation.id }}</td>
            </tr>
            <tr>
                <th>Libdonation</th>
                <td>{{ donation.libDonation }}</td>
            </tr>
            <tr>
                <th>Datecr</th>
                <td>{% if donation.dateCr %}{{ donation.dateCr|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Valeurd</th>
                <td>{{ donation.valeurD }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td><img src="{{ asset('images/') }}{{ donation.photo }}" style="width: 50px;height: 50px"></td>

            </tr>
            <tr>
                <th>Description</th>
                <td>{{ donation.description }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ donation.categorie }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('donation_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('donation_edit', { 'id': donation.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
        </tbody>
    </table>
