    <section class="alazea-blog-area mb-100">
        <div class="breadcrumb-area">
            <!-- Top Breadcrumb Area -->
            <div class="top-breadcrumb-area bg-img bg-overlay d-flex align-items-center justify-content-center" style="background-image: url(https://quotefancy.com/media/wallpaper/3840x2160/3982991-Jon-Postel-Quote-Group-discussion-is-very-valuable-group-drafting.jpg);">
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-8">
                    <div class="row">
                        {% for topic in topics %}
                            <!-- Single Blog Post Area -->
                            <div class="col-12 col-lg-6">
                                <div class="single-blog-post mb-50">
                                    <div class="post-thumbnail mb-30">
                                        <a href="{{ path('topics_show', { 'id': topic.id }) }}"><img  src="{{ asset('images/') }}{{ topic.photo }}" alt="" style="height: 8cm;width: 8cm"> </a>
                                    </div>
                                    <div class="post-content">
                                        <a href="#" class="post-title">
                                            <h5><span>{{ topic.sujet }}</span></h5>
                                        </a>
                                        <div class="post-meta">
                                            <a href="#"><i class="fa fa-clock-o" aria-hidden="true"></i> <span>{% if topic.date %}{{ topic.date|date('Y-m-d') }}{% endif %}</span> </a>
                                            <a href="#"><i class="fa fa-user" aria-hidden="true"></i><span>{{ topic.topicBy }}</span></a>
                                        </div>
                                        <p class="post-excerpt"><p>{{ topic.description |raw }}</p></p>
                                        {% if topic.groupe.user == app.user.username %}
                                            <a href="{{ path('topics_edit', { 'id': topic.id }) }}"  style="color:red;">  <i class="far fa-edit"></i> edit</a>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="col-12 col-md-4">
                    <div class="post-sidebar-area">
                        <div class="single-widget-area">
                            <!-- Title -->
                            <div class="widget-title">
                                <h4 style="font-size:40px;"><i class="fas fa-search"></i> Filtre</h4>
                            </div>

