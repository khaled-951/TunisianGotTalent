{% extends 'admin.html.twig' %}
{% block body %}
<section class="content ecommerce-page">
    <div class="block-header">
        <div class="row">
            <div class="col-lg-7 col-md-6 col-sm-12">
                <h2>Product List
                    <small>Welcome to Oreo</small>

                </h2>
            </div>
            <div class="col-lg-5 col-md-6 col-sm-12">
                <ul class="breadcrumb float-md-right">
                    <li class="breadcrumb-item"><a href="index.html"><i class="zmdi zmdi-home"></i> Oreo</a></li>
                    <li class="breadcrumb-item"><a href="ec-dashboard.html">eCommerce</a></li>
                    <li class="breadcrumb-item active">Product List</li>
                </ul>
            </div>
        </div>
    </div>
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card action_bar">
                    <div class="body">
                        <div class="row clearfix">
                            <div class="col-lg-1 col-md-2 col-3">
                                <div class="checkbox inlineblock delete_all">

                                </div>
                            </div>
                            <div class="col-lg-5 col-md-4 col-6">

                            </div>
                            <div class="col-lg-6 col-md-6 col-3 text-right">
                                <div class="btn-group hidden-sm-down">

                                </div>

                                <button type="button" class="btn btn-neutral hidden-sm-down">
                                    <i class="zmdi zmdi-plus-circle"></i>
                                </button>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card">
                    <div class="body">
                        <div class="row">
                            {{ form_start(form,{'attr': {'class': 'col-lg-12'}}) }}
                            <div class="col-md-12 ">

                                <div class="form-group form-float">
                                    {{ form_widget(form.mailto,{'attr': {'class': 'form-control','placeholder':'To:'}}) }}

                                </div>
                                <div class="form-group form-float">
                                    {{ form_widget(form.subject,{'attr': {'class': 'form-control','placeholder':'Subject'}}) }}

                                </div>
                            </div>
                            <div class="col-md-12 col-lg-12 col-xl-12">
                                <strong>Content:</strong>

                                    {{ form_widget(form.object,{'attr': {'class': 'form-control','rows':'10' }}) }}


                                <button type="submit" class="btn btn-primary btn-round waves-effect m-t-20">Send Message</button>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>
{% endblock %}