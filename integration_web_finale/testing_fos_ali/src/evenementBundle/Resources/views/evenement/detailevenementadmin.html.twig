{% extends 'admin.html.twig' %}
{% block body %}
    <section class="content file_manager">
        <div class="block-header">
            <div class="row">
                <div class="col-lg-5 col-md-7 col-sm-12">
                    <ul class="breadcrumb float-md-left">
                        <li class="breadcrumb-item"><a href="#"><i class="zmdi zmdi-home"></i> Acceuil</a></li>
                        <li class="breadcrumb-item"><a href="#">Evenement</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                {%  for c in evenement %}
                <div class="col-lg-8 col-md-20">
                    <div class="card single_post">
                        <div class="body">
                            <h3 style="color: red; font-size: xx-large;" class="m-t-0 m-b-5"><a href="">{{ c.titre }}</a></h3>
                        </div>
                        <div class="body">
                            <div class="img-post m-b-15">
                                <img src="{{ asset('template/images/'~c.image)  }}" alt="image">
                            </div>
                            <p style="color: #0D47A1; font-size: large;">{{ c.description }}</p>
                            <a href="{{ path('afficherevenementAdmin') }}" title="read more" class="btn btn-round btn-info">retour</a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}