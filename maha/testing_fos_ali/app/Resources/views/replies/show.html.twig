{% extends 'base.html.twig' %}

{% block body %}
    <h1>Reply</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reply.id }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ reply.contenu }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ reply.date }}</td>
            </tr>
            <tr>
                <th>Datereplay</th>
                <td>{% if reply.dateReplay %}{{ reply.dateReplay|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Relayby</th>
                <td>{{ reply.relayBy }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('replies_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('replies_edit', { 'id': reply.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
