{% extends 'base.html.twig' %}

{% block body %}
    <main>
        <div class="main-section">
            <div class="container">
                <div class="main-section-data">
                    <div class="row">
                        <div class="col-lg-3 col-md-4 pd-left-none no-pd">
                            <div class="main-left-sidebar no-margin"></div>
                        </div>
                        <div class="col-lg-6 col-md-8 no-pd" >

                            <div class="main-ws-sec">
                                <div class="posts-section">
                                    <div class="post-bar">
                                        <div class="post_topbar">
                                            <div class="usy-dt">
                                                <img src="" alt="">
                                                <div class="usy-name">

                                                    <h3>Liste des invitations </h3>

                                                </div>
                                            </div>

                                            <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap"
                                                   cellspacing="0" width="70%">

                                                <tr>
                                                    <th>Id</th>
                                                    <th>user</th>
                                                    <th>groupe</th>
                                                    <th>User_admin</th>
                                                    <th>Actions</th>

                                                </tr>

                                                <tbody>
                                                {% for d in demandes %}
                                                    {% if d.Groupe.user == app.user.username %}
                                                        <tr>
                                                            <td>{{ d.Id }}</td>
                                                            <td>{{ d.user }}</td>
                                                            <td>{{ d.Groupe.Id }}</td>
                                                            <td>{{ d.Groupe.user }}</td>
                                                            <td>
                                                                <ul>
                                                                    <li>
                                                                        <a href="/groupe/accept/{{d.Groupe.Id }}/{{ d.user }}/{{d.Id}}">Accepter</a>
                                                                    </li>
                                                                </ul>
                                                            </td>
                                                        </tr>
                                                    {% endif %}

                                                {% endfor %}


                                            </table>
                                        </div></div></div></div></div></div></div></div></div></main>

{% endblock %}